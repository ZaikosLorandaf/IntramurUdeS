<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ca.usherbrooke.fgen.api.mapper.PlayerMapper">

    <select id="selectPlayers" resultType="ca.usherbrooke.fgen.api.backend.Player">
        select id,
               name,
               last_name,
               number,
               id_team
        from intramurudes.Player
    </select>

    <select id="selectOnePlayer" resultType="ca.usherbrooke.fgen.api.backend.Player">
        select id,
               name,
               last_name,
               number,
               id_team
        from intramurudes.Player
        where id = #{id}
    </select>


    <select id="getNewId" resultType="Integer">
        select nextval('intramurudes.player_id_seq)'::regclass)
    </select>

    <delete id="deleteOnePlayer">
        delete
        from intramurudes.Player
        where id = #{id}
    </delete>

    <insert id="insertPlayer">
        insert into intramurudes.Player(id,
                                        name,
                                        last_name,
                                        id_team)
        values (#{player.name},
                #{player.last_name},
                #{player.id_team})
    </insert>




</mapper>